{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "gcc build active file",
        "command": "gcc",
        "args": [
            "-Wall",
            "-g",
            "${fileDirname}/*.c",
            "-o",
            "C:\\compiler-intech\\builds\\compiler.exe"
        ],
        /* avant
        "problemMatcher": [
        "$gcc"
        ], */
        // apr√®s
        "problemMatcher": {
            "base": "$gcc",
            "fileLocation": "absolute"
        },
        "group": "build"
    }]
}